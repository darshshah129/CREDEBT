<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="DB-UI Validation Suite" parallel="methods" thread-count="5">

    <listeners>
        <listener class-name="org.utils.TestNGAllureListener"/>
    </listeners>

  <test name="Data Extract from DB">
        <classes>
            <class name="DB.DatabaseSmokeTest"/>
        </classes>
    </test> 

    <test name="Frontend">
        <classes>
            <class name="Web.WebSmokeTest"/>
        </classes>
    </test>

    <test name="Comparator">
        <classes>
            <class name="Compare.Compare"/>
        </classes>
    </test>
</suite>